{{#if logged_in}}
<div class="container mx-auto">
    <!-- Add Activity Button -->
    <div class="activity-button flex justify-center" >
        <button class="text-gray-900 bg-green-500 hover:scale-110 duration-200 focus:ring-4 focus:outline-none focus:ring-black-300 dark:focus:ring-black-800 font-bold rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
        <a href="/activity">Add Activity</a>
        </button>
    </div>
<br>
    <div class="grid flex justify-center lg:grid-flow-col lg:gap-10 xl:gap-20 pt-10">
        <!-- Mindfulness Graph -->
        <div>
            <h1 class="text-center">Mindfulness</h1>
            <div id="mindfulness-heatmap"></div>
        </div>
    <br>
        <!-- Strength Graph -->
        <div>
            <h1 class="text-center">Strength</h1>
            <div id="strength-heatmap"></div>
        </div>
    <br>
        <!-- Cardio Graph -->
        <div>
            <h1 class="text-center">Cardio</h1>
            <div id="cardio-heatmap"></div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/graph.js"></script>
{{/if}}

