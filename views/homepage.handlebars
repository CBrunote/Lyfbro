{{#if logged_in}}
<div class="container mx-auto">
    <!-- Add Activity Button -->
    <div class="activity-button flex justify-center" >
        <button class="text-gray-900 bg-gradient-to-r from-lime-200 via-lime-400 to-lime-500 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-lime-300 dark:focus:ring-lime-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
        <a href="/activity">Add Activity</a>
        </button>
    </div>

<br>
    <div class="grid flex justify-center lg:grid-flow-col gap-10 pt-10">
        <!-- Cardio Graph -->
        <div>
            <h1 class="text-center">Cardio</h1>
            <div id="cardio-heatmap"></div>
        </div>

    <br>

        <!-- Mindfulness Graph -->
        <div>
            <h1 class="text-center">Mindfulness</h1>
            <div id="mindfulness-heatmap"></div>
        </div>

    <br>

        <!-- Strength Graph -->
        <div>
            <h1 class="text-center">Strength</h1>
            <div id="strength-heatmap"></div>
        </div>
    </div>
</div>
{{/if}}

<script type="text/javascript" src="/js/graph.js"></script>